    "version": "0.2.0",
    "configurations": [  
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port":9230,
            "runtimeArgs": ["--inspect=9230"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\src\\index.js",
            "restart": false,
            "console": "integratedTerminal",
            "skipFiles": [
              "${workspaceRoot}/node_modules/**/*.js",
              "<node_internals>/**/*.js",
              "C:/Users/Administrator/source/Workspaces/Workspace/koa-starter-kit/src/_function/**/*.js",
              "${workspaceRoot}/src/db/*.json",
              "${workspaceRoot}/src/db/*.json.0",
            ]
        }
    ]
}